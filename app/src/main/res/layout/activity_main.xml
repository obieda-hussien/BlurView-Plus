<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eightbitlab.blurview_sample.MainActivity">

    <eightbitlab.com.blurview.BlurTarget
        android:id="@+id/target"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </eightbitlab.com.blurview.BlurTarget>

    <!-- Left Side Blur View for Multi-layer Effects -->
    <eightbitlab.com.blurview.BlurView
        android:id="@+id/leftSideBlurView"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/rounded"
        android:elevation="8dp"
        android:visibility="gone"
        app:blurOverlayColor="@color/colorOverlay" />

    <!-- Right Side Blur View for Multi-layer Effects -->
    <eightbitlab.com.blurview.BlurView
        android:id="@+id/rightSideBlurView"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/rounded"
        android:elevation="8dp"
        android:visibility="gone"
        app:blurOverlayColor="@color/colorOverlay" />

    <!-- Center Overlay Blur View for Advanced Effects -->
    <eightbitlab.com.blurview.BlurView
        android:id="@+id/centerOverlayBlurView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded"
        android:elevation="12dp"
        android:visibility="gone"
        app:blurOverlayColor="@color/colorOverlay">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Multi-layer\nBlur Demo"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </eightbitlab.com.blurview.BlurView>

    <!-- Top Blur View with Comprehensive Controls -->
    <eightbitlab.com.blurview.BlurView
        android:id="@+id/topBlurView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/rounded"
        android:elevation="16dp"
        app:blurOverlayColor="@color/colorOverlay">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Basic Controls Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ›ï¸ Basic Controls"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blur Radius"
                    android:textSize="10sp"
                    android:textColor="@android:color/white" />

                <SeekBar
                    android:id="@+id/radiusSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="200"
                    android:padding="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quality"
                            android:textSize="10sp"
                            android:textColor="@android:color/white" />

                        <SeekBar
                            android:id="@+id/qualitySeekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="100" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Opacity"
                            android:textSize="10sp"
                            android:textColor="@android:color/white" />

                        <SeekBar
                            android:id="@+id/opacitySeekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="100" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Enhanced Features Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="âœ¨ Enhanced Features"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/animationsSwitch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“± iPhone Anim"
                        android:textSize="9sp"
                        android:textColor="@android:color/white"
                        android:checked="true" />

                    <Switch
                        android:id="@+id/dynamicColorsSwitch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŽ¨ Dynamic Colors"
                        android:textSize="9sp"
                        android:textColor="@android:color/white"
                        android:checked="false" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/performanceOptimizationSwitch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="âš¡ Performance"
                        android:textSize="9sp"
                        android:textColor="@android:color/white"
                        android:checked="true" />

                    <Switch
                        android:id="@+id/autoRefreshSwitch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ”„ Auto Refresh"
                        android:textSize="9sp"
                        android:textColor="@android:color/white"
                        android:checked="false" />

                </LinearLayout>

                <!-- Advanced Features Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="ðŸš€ Advanced Features"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/multiLayerBlurSwitch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŒˆ Multi-layer"
                        android:textSize="9sp"
                        android:textColor="@android:color/white"
                        android:checked="false" />

                    <Switch
                        android:id="@+id/environmentalEffectsSwitch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŒ Environmental"
                        android:textSize="9sp"
                        android:textColor="@android:color/white"
                        android:checked="false" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/materialYouIntegrationSwitch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŽ¯ Material You"
                        android:textSize="9sp"
                        android:textColor="@android:color/white"
                        android:checked="false" />

                    <Switch
                        android:id="@+id/debugOverlaySwitch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ› Debug"
                        android:textSize="9sp"
                        android:textColor="@android:color/white"
                        android:checked="false" />

                </LinearLayout>

                <!-- Performance Monitoring Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="ðŸ“Š Performance Monitoring"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/realTimeMonitoringCheckbox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Real-time"
                        android:textSize="9sp"
                        android:textColor="@android:color/white"
                        android:checked="false" />

                    <CheckBox
                        android:id="@+id/intelligentCachingCheckbox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Smart Cache"
                        android:textSize="9sp"
                        android:textColor="@android:color/white"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/adaptiveQualityCheckbox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Adaptive"
                        android:textSize="9sp"
                        android:textColor="@android:color/white"
                        android:checked="false" />

                </LinearLayout>

                <!-- Algorithm Selection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="ðŸ§® Blur Algorithm"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <Spinner
                    android:id="@+id/blurAlgorithmSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />

                <!-- Color Extraction Mode -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="ðŸŽ¨ Color Extraction Mode"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <Spinner
                    android:id="@+id/colorExtractionModeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />

                <!-- Action Buttons -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="ðŸŽ›ï¸ Actions"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/resetConfigButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="Reset"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/exportConfigButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="Export"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/captureSnapshotButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="Capture"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/stressTestButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="Stress Test"
                        android:textSize="10sp" />

                </LinearLayout>

                <!-- Performance Stats Display -->
                <TextView
                    android:id="@+id/performanceStatsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Performance: Good"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:background="@android:color/black"
                    android:padding="4dp"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </ScrollView>

    </eightbitlab.com.blurview.BlurView>

    <!-- Debug Info Display -->
    <TextView
        android:id="@+id/debugInfoText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/black"
        android:fontFamily="monospace"
        android:padding="8dp"
        android:textColor="#00FF00"
        android:textSize="8sp"
        android:visibility="gone" />

    <!-- Color Analysis Display -->
    <TextView
        android:id="@+id/colorAnalysisText"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginStart="8dp"
        android:layout_marginTop="300dp"
        android:background="@android:color/black"
        android:fontFamily="monospace"
        android:padding="8dp"
        android:textColor="#00FFFF"
        android:textSize="8sp"
        android:visibility="gone" />

    <!-- Cache Stats Display -->
    <TextView
        android:id="@+id/cacheStatsText"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="300dp"
        android:background="@android:color/black"
        android:fontFamily="monospace"
        android:padding="8dp"
        android:textColor="#FFFF00"
        android:textSize="8sp"
        android:visibility="gone" />

    <!-- Bottom Blur View -->
    <eightbitlab.com.blurview.BlurView
        android:id="@+id/bottomBlurView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:blurOverlayColor="@color/colorOverlay">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_tab_height"
            android:background="@android:color/transparent" />

    </eightbitlab.com.blurview.BlurView>

    <!-- Demo Mode FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/demoModeFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_media_play"
        app:tint="@android:color/white" />

    <!-- Chat FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/chatFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="88dp"
        android:src="@android:drawable/ic_dialog_email"
        app:tint="@android:color/white"
        app:backgroundTint="#0081F1" />

</FrameLayout>
